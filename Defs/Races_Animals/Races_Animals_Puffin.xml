<Defs>
  
<ThingDef ParentName="AnimalThingBase">
    <defName>ISA_Puffin</defName>
    <label>puffin</label>
    <devNote>chicken-1</devNote>
    <description>A wild bird from which humans steals it's egg and hunt for food. Lays eggs very often, however they take a long time to hatch.</description>
    <statBases>
      <MoveSpeed>2.3</MoveSpeed>
      <MarketValue>90</MarketValue>
      <LeatherAmount>36</LeatherAmount>
      <ComfyTemperatureMin>-45</ComfyTemperatureMin>
      <ComfyTemperatureMax>30</ComfyTemperatureMax>
      <FilthRate>6</FilthRate>
    </statBases>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>ISA_EggPuffinUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>ISA_EggPuffinFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>3</eggLayIntervalDays>
        <eggCountRange>1</eggCountRange>
      </li>
    	<li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
    		<customThingToDig>ISA_RawFish</customThingToDig>
    		<customAmountToDig>10</customAmountToDig>
    	</li>
    </comps>
    <race>
      <body>Bird</body>
      <baseHungerRate>0.28</baseHungerRate>
      <baseBodySize>0.60</baseBodySize>
      <baseHealthScale>0.40</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>Leather_Bird</leatherDef>
      <trainability>None</trainability>
      <wildness>0.4</wildness>
      <roamMtbDays>7</roamMtbDays>
      <mateMtbHours>8</mateMtbHours>
      <lifeExpectancy>8</lifeExpectancy>
      <useMeatFrom>Cassowary</useMeatFrom>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
		<soundWounded>AEXP_Pawn_Penguin_Wounded</soundWounded>
		<soundDeath>AEXP_Pawn_Penguin_Death</soundDeath>
		<soundCall>AEXP_Pawn_Penguin_Call</soundCall>
		<soundAngry>AEXP_Pawn_Penguin_Angry</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.12</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_Goose_Wounded</soundWounded>
          <soundDeath>Pawn_Goose_Death</soundDeath>
          <soundCall>Pawn_Goose_Call</soundCall>
          <soundAngry>Pawn_Goose_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <wildBiomes>
        <IceSheet>0.5</IceSheet>
        <Tundra>1</Tundra>
        <BorealForest>0.7</BorealForest>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>3</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>5.6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
  </ThingDef>

