<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Ancients</li>
    </mods>	
	<match Class="PatchOperationSequence">
      <operations>
        
	      <!--========== MOVEABLE ANCIENT SUPPLY SLINGSHOT ==========-->
        
	<li Class="PatchOperationAdd">
         <xpath>/Defs/ThingDef[defName = "VFEA_AncientSupplySlingshot"]</xpath>
         <value>
           <minifiedDef>MinifiedThing</minifiedDef>
         </value>		 
        </li>
        
	<li Class="PatchOperationAdd">
         <xpath>/Defs/ThingDef[defName = "VFEA_AncientSupplySlingshot"]/statBases</xpath>
         <value>
           <Mass>150</Mass>
         </value>		 
        </li>
        
      </operations>	  
    </match>		  
  </Operation>
</Patch>
